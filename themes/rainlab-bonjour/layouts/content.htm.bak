{% partial 'site/header' %}
<h1 aria-hidden="true" class="seo-heading">{{ trans_pick(page, 'title') }}</h1>

<div class="static-baner-pages">
    <!-- <div class="imgwrp"><img src="{{ 'assets/img/our-milkpedia.png'|theme }}" alt="Our Milkpedia"/> </div> -->
    {% if slug == 'milky-incredibles' %}
        <div class="imgwrp hidden-xs"><img src="{{ 'assets/img/milkiincridibles/header-desktop.jpg'|theme }}" alt="Header Desktop"/> </div>
        <div class="imgwrp visible-xs"><img src="{{ 'assets/img/milkiincridibles/header-mobile.jpg'|theme }}" alt="Header Mobile"/> </div>
    {% else %}
        <div class="imgwrp hidden-xs"><img src="{{ 'assets/img/our-milkpedia.png'|theme }}" alt="Our Milkpedia"/> </div>
        <div class="imgwrp visible-xs"><img src="{{ 'assets/img/staticbaner-xs.jpg'|theme }}" alt="Banner Static"/> </div>
    {% endif %}
</div>

<div id='main-section' class="container" style="padding: 60px 0;">
    <div class="col-md-12">
        <div class="breadcrumb">
            <ul>
                <li><a href="{{ 'home' | page }}">{{ 'beranda'|_ }}</a> </li>
                <li><a href="javascript:;">{{ trans_pick(page, 'title') }}</a> </li>
            </ul>
        </div>
    </div>
    <div class="col-md-12">
        <div class="default-content">
            <h3>{{ trans_pick(page, 'title') }}</h3>
            {{ trans_pick(page, 'markup')|raw }}
        </div>
    </div>
</div>

