title = "Our Activities Single"
url = "/aktivitas-kami/:category-slug/:slug"
layout = "default"
is_hidden = 0
robot_index = "index"
robot_follow = "follow"

[activityCategories]


[builderDetails]
modelClass = "Definite\Activities\Models\Activity"
identifierValue = "{{ :slug }}"
modelKeyColumn = "slug"
displayColumn = "title"
notFoundMessage = "Record not found"
==
{% set record = builderDetails.record %}
{% set displayColumn = builderDetails.displayColumn %}
{% set notFoundMessage = builderDetails.notFoundMessage %}

{% if record %}

<h1 aria-hidden="true" class="seo-heading">{{ record.title }}</h1>

<div class="static-baner-pages">
    <div class="imgwrp"><img src="{{ 'assets/img/our-milkpedia.png'|theme }}" alt="Our Milkpedia"/> </div>
</div>

<div class="container-menutab container-menutab--five">
    <div class="container-one">
        <ul class="breadcrumb">
            <li class="toggle visible-xs visible-sm"><a href="javascript:;" class="active">{{ record.title }}</a></li>
            {% if activityCategories.records %}
                {% for category in activityCategories.records %}
                <li>
                    <a href="{{ 'our-activities-archive'|page({'slug': category.slug}) }}" class="{{ record.slug == category.slug ? 'active' : '' }}">
                        {{ category.title }}
                    </a>
                </li>
                {% endfor %}
            {% endif %}
         </ul>
    </div>
</div>

<div id='main-section'>

  <div class="container">
      <div class="row">
          <div class="breadcrumb">
              <div class="container-two breadcrumb__left">
                  <ul>
                      <li>
                          <a href="{{ 'home'|page }}">Beranda</a>
                      </li>
                      <li>
                          <a href="javascript:;">Aktivitas Kami</a>
                      </li>
                      <li>
                          <a href="{{ 'our-activities-archive'|page({'slug': record.category.slug}) }}">{{ record.category.title }}</a>
                      </li>
                      <li>
                          <a href="{{ 'our-activities-single'|page({
                            'category-slug': record.category.slug,
                            'slug': record.slug
                        }) }}">{{ record.title }}</a>
                      </li>
                  </ul>
              </div>
          </div>
      </div>
  </div>

  <div class="col-md-12">
      <div class="container-two">
          <div class="date date-main">
              <label>{{ record.category.title }}</label>
              <span> | {{ record.created_at.format('d M Y') }}</span>
          </div>
      </div>
  </div>

  <div class="col-md-12">
      <div class="default-content">
          <div class="container-two">
              <h3>{{ record.title }}</h3>

              <div class="imgwrp">
                  <img src="{{ record.image_banner|media }}" alt="{{ record.title }}"/>
              </div>

                {{ record.description|raw }}


                <div class="row activities__gallery-thumbnail hide">
                  <div class="col-xs-12 col-sm-4 item">
                    <img src="{{ 'assets/img/activities/thumbnail/01.png'|theme }}" alt="Thumbnail 1">
                  </div>
                  <div class="col-xs-12 col-sm-4 item">
                    <img src="{{ 'assets/img/activities/thumbnail/02.png'|theme }}" alt="Thumbnail 2">
                  </div>
                  <div class="col-xs-12 col-sm-4 item">
                    <img src="{{ 'assets/img/activities/thumbnail/03.png'|theme }}" alt="Thumbnail 3">
                  </div>
                </div>

              <div class="wrp-sharesocemd">
                  <label>SHARE THIS ENTRY</label>
                  <div class="addthis_inline_share_toolbox"></div>
               </div>
          </div>
      </div>
  </div>

  <div class="col-xs-12 activities__information">
    <div class="container">
      <div class="text-center default-content">
        <h3>Untuk informasi lebih lanjut, yuk klik disini</h3>
        <a href="{{ 'our-activities-archive'|page({'slug': record.category.slug}) }}/galeri" class="button">Find Out More</a>
      </div>
    </div>
  </div>

</div> <!-- end mainsection -->
{% else %}
    {{ notFoundMessage }}
{% endif %}
